shader CellSprite : SpriteBase
{
    float CellValue;
    
    stage override float4 Shading()
    {
        float4 color = base.Shading();
        float a = CellValue * color.a;
        return a;
    }
};

namespace Stride.Rendering
{
    partial effect CellSpriteEffect
    {
        using params SpriteBaseKeys;
        using params CellSpriteKeys;
        mixin CellSprite;
    };
}
